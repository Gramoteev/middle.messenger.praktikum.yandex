{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Smiler - web messenger",
  "alias": {
    "core": "./src/core",
    "api": "./src/api",
    "components": "./src/components",
    "controllers": "./src/controllers",
    "helpers": "./src/helpers",
    "pages": "./src/pages",
    "styles": "./src/styles"
  },
  "scripts": {
    "test": "jest",
    "dev": "webpack serve",
    "start": "npm run build && node ./server.js",
    "build": "webpack --mode production",
    "eslint": "eslint **/*.ts --fix",
    "stylelint": "stylelint **/*.pcss --fix",
    "docker": "docker build -t smiler ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run stylelint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gramoteev/middle.messenger.praktikum.yandex.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gramoteev/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/Gramoteev/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@types/jest": "27.5.2",
    "@types/node": "18.7.18",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "babel-loader": "9.1.0",
    "chai": "4.3.6",
    "css-loader": "6.7.1",
    "dotenv": "16.0.3",
    "dotenv-webpack": "8.0.1",
    "eslint": "8.24.0",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "5.5.0",
    "husky": "4.3.8",
    "mini-css-extract-plugin": "2.6.1",
    "mocha": "10.1.0",
    "postcss": "8.4.16",
    "postcss-import": "14.1.0",
    "postcss-loader": "7.0.1",
    "postcss-nested": "5.0.6",
    "stylelint": "14.12.1",
    "stylelint-config-standard": "28.0.0",
    "ts-loader": "9.4.1",
    "typescript": "4.8.3",
    "webpack": "5.75.0",
    "jest": "27.5.1",
    "webpack-cli": "4.10.0",
    "identity-obj-proxy": "3.0.0",
    "webpack-dev-server": "4.11.1",
    "webpack-node-externals": "3.0.0",
    "@testing-library/jest-dom": "5.16.5"
  },
  "dependencies": {
    "express": "4.18.1",
    "nanoid": "3.3.4",
    "normalize.css": "8.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/src/tests/setupEnv.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "\\.(pcss|svg|png)$": "identity-obj-proxy",
      "^core(.*)$": "<rootDir>/src/core$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^helpers(.*)$": "<rootDir>/src/helpers$1",
      "^controllers(.*)$": "<rootDir>/src/controllers$1",
      "^api(.*)$": "<rootDir>/src/api$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^tests(.*)$": "<rootDir>/src/tests$1"
    }
  }
}
