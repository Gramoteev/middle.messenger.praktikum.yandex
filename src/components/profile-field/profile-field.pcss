.profile-field {
  border-top: 1px solid var(--gray80);
  position: relative;
  white-space: nowrap;
  &:first-child {
    border-top: none;
  }
  &__label {
    position: absolute;
    line-height: 39px;
  }
  &__input {
    color: var(--gray100);
    text-align: right;
    outline: none;
    border: none;
    width: 100%;
    padding: 12px 0;
  }
  &__error {
    left: 100%;
    z-index: 10;
    bottom: 0;
    padding: 12px;
  }
}
